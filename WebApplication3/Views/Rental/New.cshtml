@model  WebApplication3.ViewModels.RentalForm

@{
    ViewData["Title"] = "Movie Form";
}

<h2>New Rantal</h2>
<div>
    <form id="newRental" style="font-size: 20px">
        <div class="form-group">
            <label class="form-label">Customer</label>
            <div class="tt-container">
                <input name="customer" id="customer" type="text" value="" class="typeahead"/>
            </div>
        </div>
        <div class="form-group">
            <label class="form-label">Movie</label>
            <div class="tt-container">
                <input name="movie" id="movie" type="text" value="" class="typeahead"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-4">
                <ul id="movies" class="list-group"></ul>
            </div>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>

    <script>
        $(document).ready(function() {
            var viewModel = {
                movieIds: []
            };

            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            window.$('#customer').typeahead({
                    minLength: 1,
                    highlight: true
                },
                {
                    name: 'customers',
                    display: 'name',
                    source: customers
                }).on("typeahead:select",
                function(e, customer) {
                    viewModel.customerId = customer.id;
                });

            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            window.$('#movie').typeahead({
                    minLength: 1,
                    highlight: true
                },
                {
                    name: 'movies',
                    display: 'name',
                    source: movies
                }).on("typeahead:select",
                function(e, movie) {
                    window.$('#movies').append("<li class='list-group-item d-flex justify-content-between align-items-center'>" + movie.name + "</li>");
                    window.$('#movie').typeahead("val", "");
                    viewModel.movieIds.push(movie.id);
                });

            window.$.validator.addMethod("validCustomer",
                function() {
                    return viewModel.customerId && viewModel.customerId !== 0;
                });

            window.$.validator.addMethod("validMovie",
                function() {
                    return viewModel.movieIds > 0;
                });

            var validator = window.$('#newRental').validate({
                rules: {
                    customer: {
                        required: true,
                        validCustomer: true
                    },
                    movie: {
                        required: false,
                        validMovie: true
                    }
                },
                messages: {
                    customer: {
                        required:"Please type in a customer",
                        validCustomer: "Please select a valid customer."

                    },
                    movie: {
                        validMovie: "Please select a valid movie."
                    }
                },
                submitHandler : function() {
                    e.preventDefault();
                    window.$.ajax({
                            url: "/api/Rentals",
                            method: "post",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            data: JSON.stringify(viewModel)
                        })
                        .done(function() {
                            window.toastr.success("Rentals successfully recorded.");
                            window.$('#customer').typeahead.typeahead("val", "");
                            window.$('#movie').typeahead.typeahead("val", "");
                            window.$('#movies').empty();
                            viewModel = { movieIds: [] };
                            validator.resetForm();
                        })
                        .fail(function() {
                            window.error("Rentals recording failed.");
                    });

                    return false;
                }
            });
        });
    </script>
}