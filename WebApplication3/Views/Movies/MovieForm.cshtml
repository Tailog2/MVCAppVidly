@model WebApplication3.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = Model.Title;
}

<h1>@Model.Title</h1>


@if (Model is null)
{
    <text>Application can not reach the database</text>
}
else
{
    @using (Html.BeginForm("Save", "Movies"))
    {
        <form>
        <div style="font-size: 20px">
            <div class="mt-3">
                @Html.LabelFor(m => m.Movie.Name, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control", placeholder = "Name"})
            </div>
            <div class="mt-3">
                @Html.LabelFor(m => m.Movie.ReleaseDate, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:dd.MM.yyyy}", new { @class = "form-control", placeholder = "Release Date"})
            </div>
            <div class="mt-3">
                @Html.LabelFor(m => m.Movie.DateAdded, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Movie.DateAdded, "{0:dd.MM.yyyy}", new { @class = "form-control", placeholder = "Date of Adding"})
            </div>
            <div class="mt-3">
                @Html.LabelFor(m => m.Movie.NumberInStock, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control", placeholder = "Number in Stock"})
            </div>
            <div class="mt-3">
                @Html.LabelFor(m => m.Movie.Genre, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Movie Genre",new { @class = "form-control" })
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save</button>
        </form>
    }
}