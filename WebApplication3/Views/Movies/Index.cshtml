@model WebApplication3.ViewModels.MoviesViewModel

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
<p>
    @Html.ActionLink("New Movie",	"New",	"Movies", null, new {@class = "btn btn-primary"})
</p>



@if (Model is null)
{
    <text>Application can not access the database</text>
}
else if (Model.Movies?.Any() is null)
{
    <text>We don't have any movies yet</text>
} 
else
{
    <table class="table	table-bordered	table-hover"  style="font-size: 20px">
        <thead>
        <tr>
            <td>Movie</td>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>@Html.ActionLink(@movie.Name,	"Edit",	"Movies",	new { id=movie.Id })</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        }
        </tbody>
    </table>
}

