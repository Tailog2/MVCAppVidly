@model WebApplication3.ViewModels.CustomerFormViewModel

@{
    ViewData["Title"] = "Movie Form";
}

<h1>New Customer</h1>

@if (Model is null)
{
    <text>Application can not reach the database</text>
}
else
{
    @using (Html.BeginForm("Save", "Customers"))
    {
        <div style="font-size: 20px">
            <div class="mt-3">
                @Html.LabelFor(m => m.Customer.Name, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control", placeholder = "Name"})
            </div>
            <div class="mt-3">
                @Html.LabelFor(m => m.Customer.BirthDate, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Customer.BirthDate, "{0:dd.MM.yyyy}", new { @class = "form-control", placeholder = "BirthDate"})
                @Html.EditorFor(m => m.Customer.BirthDate, new { @class = "form-control"})
            </div>
            <div class="mt-3">
                @Html.LabelFor(m => m.Customer.MembershipTypeId, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type",new { @class = "form-control" })
            </div>
            <div class="form-check mt-3">
                @Html.CheckBoxFor(m =>  m.Customer.IsSubscribedToNewsletter, new { @class = "form-check-input" }) 
                @Html.LabelFor(m => m.Customer.IsSubscribedToNewsletter, "Subscribe to News Later?",new { @class = "form-check-label" })
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    }
}